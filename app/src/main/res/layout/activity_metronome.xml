<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_metronome"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sebullek.metronome.Metronome">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BPM"
                android:gravity="center_horizontal"
                android:id="@+id/bpm"
                android:textSize="24sp"
                android:layout_weight="2" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb_bpm"
                android:max="360"
                android:layout_weight="2" />


            <com.sebullek.metronome.EditSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="BPM"
                android:ems="10"
                android:id="@+id/es_bpm"
                android:layout_margin="20dp"
                android:hint="enter security question"
                android:textColorHint="#aa828282"
                android:textSize="18dp"
                android:padding="8dp"
                app:dropDownDrawable="@drawable/picker"
                app:dropDownDrawableSpacing="15dp"
                app:dropDownDrawableWidth="25dp"
                app:dropDownDrawableHeight="25dp"
                app:dropDownAnimStyle="@style/CustomPopupAnimation"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Metrum"
                android:gravity="center_horizontal"
                android:id="@+id/metrum"
                android:textSize="24sp"
                android:layout_weight="2" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb_metrum"
                android:max="8"
                android:layout_weight="2" />

            <com.sebullek.metronome.EditSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="Metrum"
                android:ems="10"
                android:id="@+id/es_metrum"
                android:layout_margin="20dp"
                android:hint="enter security question"
                android:textColorHint="#aa828282"
                android:textSize="18dp"
                android:padding="8dp"
                app:dropDownDrawable="@drawable/picker"
                app:dropDownDrawableSpacing="15dp"
                app:dropDownDrawableWidth="25dp"
                app:dropDownDrawableHeight="25dp"
                app:dropDownAnimStyle="@style/CustomPopupAnimation"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <Button
                android:text="START"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <CheckBox
                android:text="Trener Prędkości"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cb_speed_trainer"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Min BPM"
                android:gravity="center_horizontal"
                android:id="@+id/tv_min_bpm"
                android:textSize="24sp"
                android:layout_weight="2" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb_min_bpm"
                android:max="360"
                android:layout_weight="2" />

            <com.sebullek.metronome.EditSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="Min BPM"
                android:ems="10"
                android:id="@+id/es_min_bpm"
                android:layout_margin="20dp"
                android:hint="enter security question"
                android:textColorHint="#aa828282"
                android:textSize="18dp"
                android:padding="8dp"
                app:dropDownDrawable="@drawable/picker"
                app:dropDownDrawableSpacing="15dp"
                app:dropDownDrawableWidth="25dp"
                app:dropDownDrawableHeight="25dp"
                app:dropDownAnimStyle="@style/CustomPopupAnimation"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max BPM"
                android:gravity="center_horizontal"
                android:id="@+id/tv_max_bpm"
                android:textSize="24sp"
                android:layout_weight="2" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb_max_bpm"
                android:max="360"
                android:layout_weight="2" />

            <com.sebullek.metronome.EditSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="Max BPM"
                android:ems="10"
                android:id="@+id/es_max_bpm"
                android:layout_margin="20dp"
                android:hint="enter security question"
                android:textColorHint="#aa828282"
                android:textSize="18dp"
                android:padding="8dp"
                app:dropDownDrawable="@drawable/picker"
                app:dropDownDrawableSpacing="15dp"
                app:dropDownDrawableWidth="25dp"
                app:dropDownDrawableHeight="25dp"
                app:dropDownAnimStyle="@style/CustomPopupAnimation"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loop number"
                android:gravity="center_horizontal"
                android:id="@+id/tv_loop_number"
                android:textSize="24sp"
                android:layout_weight="2" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb_loop_number"
                android:max="10"
                android:layout_weight="2" />

            <com.sebullek.metronome.EditSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="Loop"
                android:ems="10"
                android:id="@+id/es_loop"
                android:layout_margin="20dp"
                android:hint="enter security question"
                android:textColorHint="#aa828282"
                android:textSize="18dp"
                android:padding="8dp"
                app:dropDownDrawable="@drawable/picker"
                app:dropDownDrawableSpacing="15dp"
                app:dropDownDrawableWidth="25dp"
                app:dropDownDrawableHeight="25dp"
                app:dropDownAnimStyle="@style/CustomPopupAnimation"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Increase"
                android:gravity="center_horizontal"
                android:id="@+id/tv_increase"
                android:textSize="24sp"
                android:layout_weight="2" />

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/sb_increase"
                android:max="50"
                android:layout_weight="2" />

            <com.sebullek.metronome.EditSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="Increase"
                android:ems="10"
                android:id="@+id/es_increase"
                android:layout_margin="20dp"
                android:hint="enter security question"
                android:textColorHint="#aa828282"
                android:textSize="18dp"
                android:padding="8dp"
                app:dropDownDrawable="@drawable/picker"
                app:dropDownDrawableSpacing="15dp"
                app:dropDownDrawableWidth="25dp"
                app:dropDownDrawableHeight="25dp"
                app:dropDownAnimStyle="@style/CustomPopupAnimation"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
