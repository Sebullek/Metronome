<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_metronome"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sebullek.metronome.Metronome">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Metrum"
        android:gravity="center_horizontal"
        android:id="@+id/metrum"
        android:textSize="24sp"
        android:layout_weight="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <com.sebullek.metronome.EditSpinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Metrum"
        android:ems="10"
        android:id="@+id/es_metrum"
        android:hint="enter security question"
        android:textColorHint="#aa828282"
        android:textSize="18dp"
        android:padding="8dp"
        app:dropDownDrawable="@drawable/picker"
        app:dropDownDrawableSpacing="15dp"
        app:dropDownDrawableWidth="25dp"
        app:dropDownDrawableHeight="25dp"
        app:dropDownAnimStyle="@style/CustomPopupAnimation"
        android:layout_weight="2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/metrum"
        android:layout_alignBottom="@+id/metrum"
        android:layout_alignParentEnd="true" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Min BPM"
            android:gravity="center_horizontal"
            android:id="@+id/tv_min_bpm"
            android:textSize="24sp"
            android:layout_weight="2"
        android:layout_below="@+id/es_metrum"
        android:layout_alignParentStart="true" />

    <com.sebullek.metronome.EditSpinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="Min BPM"
        android:ems="10"
        android:id="@+id/es_min_bpm"
        android:hint="enter security question"
        android:textColorHint="#aa828282"
        android:textSize="18dp"
        android:padding="8dp"
        app:dropDownDrawable="@drawable/picker"
        app:dropDownDrawableSpacing="15dp"
        app:dropDownDrawableWidth="25dp"
        app:dropDownDrawableHeight="25dp"
        app:dropDownAnimStyle="@style/CustomPopupAnimation"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_alignBaseline="@+id/tv_min_bpm"
        android:layout_alignBottom="@+id/tv_min_bpm"
        android:layout_alignStart="@+id/es_max_bpm" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Max BPM"
            android:gravity="center_horizontal"
            android:id="@+id/tv_max_bpm"
            android:textSize="24sp"
            android:layout_weight="2"
        android:layout_below="@+id/es_min_bpm"
        android:layout_alignParentStart="true" />

    <com.sebullek.metronome.EditSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="Max BPM"
            android:ems="10"
            android:id="@+id/es_max_bpm"
            android:hint="enter security question"
            android:textColorHint="#aa828282"
            android:textSize="18dp"
            android:padding="8dp"
            app:dropDownDrawable="@drawable/picker"
            app:dropDownDrawableSpacing="15dp"
            app:dropDownDrawableWidth="25dp"
            app:dropDownDrawableHeight="25dp"
            app:dropDownAnimStyle="@style/CustomPopupAnimation"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/tv_max_bpm"
            android:layout_alignBottom="@+id/metrum"
            android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loop number"
        android:gravity="center_horizontal"
        android:id="@+id/tv_loop_number"
        android:textSize="24sp"
        android:layout_weight="2"
        android:layout_below="@+id/es_max_bpm"
        android:layout_alignParentStart="true" />

    <com.sebullek.metronome.EditSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="Loop"
            android:ems="10"
            android:id="@+id/es_loop"
            android:hint="enter security question"
            android:textColorHint="#aa828282"
            android:textSize="18dp"
            android:padding="8dp"
            app:dropDownDrawable="@drawable/picker"
            app:dropDownDrawableSpacing="15dp"
            app:dropDownDrawableWidth="25dp"
            app:dropDownDrawableHeight="25dp"
            app:dropDownAnimStyle="@style/CustomPopupAnimation"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/tv_loop_number"
            android:layout_alignBottom="@+id/tv_loop_number"
            android:layout_alignStart="@+id/es_max_bpm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Increase"
        android:gravity="center_horizontal"
        android:id="@+id/tv_increase"
        android:textSize="24sp"
        android:layout_weight="2"
        android:layout_below="@+id/es_loop"
        android:layout_alignParentStart="true" />

    <com.sebullek.metronome.EditSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:text="Increase"
            android:ems="10"
            android:id="@+id/es_increase"
            android:hint="enter security question"
            android:textColorHint="#aa828282"
            android:textSize="18dp"
            android:padding="8dp"
            app:dropDownDrawable="@drawable/picker"
            app:dropDownDrawableSpacing="15dp"
            app:dropDownDrawableWidth="25dp"
            app:dropDownDrawableHeight="25dp"
            app:dropDownAnimStyle="@style/CustomPopupAnimation"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_alignBaseline="@+id/tv_increase"
            android:layout_alignBottom="@+id/tv_increase"
            android:layout_alignParentEnd="true" />

    <Button
        android:text="START"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/start"
        android:layout_below="@+id/es_increase"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Currect BPM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:id="@+id/tv_currect_bpm"
        android:layout_below="@+id/start"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
